<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hibernate.xmlConfiguration.model.Department" table="department">
        <!--primary key Columns of a Table-->
        <id name="deptId" type="int" column="dept_id">
            <generator class="native"/>
        </id>
        <!--Normal Columns of a Table-->
        <property name="deptName" column="dept_name" type="java.lang.String"/>
    </class>
</hibernate-mapping>